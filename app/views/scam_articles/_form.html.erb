<%= form_for(scam_article, html: { class: 'form-horizontal' }) do |f| %>
    <% if scam_article.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(scam_article.errors.count, "error") %> prohibited this scam_article from being saved:</h2>
  
        <ul>
          <% scam_article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= f.label :title, class: 'control-label' %>
      <%= f.text_field :title, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label :body, class: 'control-label' %>
      <span class='note'> (use <a href="https://wordhtml.com/" target="_blank">WordHTML</a> to edit article and convert to HTML for better display)</span>
      <%= f.text_area :body, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label :author, class: 'control-label' %>
      <%= f.text_field :author, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :published_at, class: 'control-label' %>
      <%= f.date_select :published_at, {}, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :category, class: 'control-label' %>
      <%= f.text_field :category, class: 'form-control' %>
    </div>
  
    <div class="actions">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  <% end %>