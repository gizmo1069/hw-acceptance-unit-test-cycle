<h2>All Scam Articles</h1>

<table class="table table-striped col-md-12">
<thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Published At</th>
    <th>Category</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @scam_articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.author %></td>
      <td><%= article.published_at %></td>
      <td><%= article.category %></td>
      <td>
        <%= link_to 'Read article', article, :class => 'a_customize' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% if current_user && current_user.is_admin %>
<%= link_to 'New Article', new_scam_article_path, :class => 'btn btn-primary mg_16' %>
<% end %>