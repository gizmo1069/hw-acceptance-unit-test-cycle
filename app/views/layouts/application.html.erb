<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
  <head>
    <title>Phish Or Fish</title>
    <link
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%# These classes come from the Bootstrap CSS framework. %>
    <nav class="navbar navbar-expand-lg bg-primary text-white mb-3 nav_customize">
      <div class='flex'>
        <h1 class="title">Phish Or Fish</h1>
        <%= link_to 'Ongoing Scams', scams_path, class: 'nav_link'  %>
        <%= link_to 'Common Scams', scam_articles_path, class: 'nav_link' %>
        <% if current_user %>
          <%= link_to 'My Posts', my_posts_path, class: 'nav_link' %>
        <% end %>
      </div>
      <div>
      <% if current_user %>
        <span style="font-size: 18px">Hi, <%= current_user.email %></span>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav_link' %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: 'nav_link' %>
      <% end %>
      </div>
      
    </nav>
    <div class="container">
      <%# Render "flash" messages in our application. This loads _flash.erb %>
      <%= render 'layouts/flash' %>
      <main id="main">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
