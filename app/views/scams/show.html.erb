<h2>Details about <em><%= @scam.title %></em></h2>

<ul id="details">
  <li>
    Category:
    <%= @scam.category %>
  </li>
  <li>
    Zipcode:
    <%= @scam.zipcode %>
  </li>
  <li>
    User:
    <%= @scam.user %>
  </li>
</ul>

<h3>Description:</h3>
<p id="description">
  <%= @scam.description %>
</p>

<div class="row">
  <% if @scam.user.email == current_user.email %>
    <%= link_to 'Edit', edit_scam_path(@scam), :class => 'btn btn-primary col-2' %>
    <%= link_to 'Delete', scam_path(@scam), 'data-method' => 'delete', 'data-confirm' => 'Are you sure?', :class => 'btn btn-danger col-2' %>
  <% end %>
  <%= link_to 'Back to scam list', scams_path, :class => 'btn btn-primary col-2' %>
</div>
