<h2>Details about <em><%= @scam.title %></em></h2>

<table class="table table-striped col-md-12" id="scams">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Zipcode</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>
          <%= @scam.title %>
        </td>
        <td>
          <%= @scam.category %>
        </td>
        <td>
          <%= @scam.zipcode %>
        </td>
        <td>
          <% if @scam.user %>
            <%= @scam.user.email %>
          <% end %>
        </td>
      </tr>
  </tbody>
</table>

<h3>Description:</h3>
<p id="description">
  <%= @scam.description %>
</p>

<img src="<%= @scam.url %>"/>

<div>
  <% "Current user: #{current_user.id}" %>
  <% if current_user && current_user.id %>
    <%= link_to 'Edit', edit_scam_path(@scam), :class => 'btn btn-primary col-2' %>
    <%= link_to 'Delete', scam_path(@scam), 'data-method' => 'delete', :class => 'btn btn-danger col-2' %>
  <% end %>
  <%= link_to 'Back to scam list', scams_path, :class => 'btn btn-primary col-2 mg_16' %>
</div>
